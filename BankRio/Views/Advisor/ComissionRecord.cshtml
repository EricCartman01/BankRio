@model IEnumerable<ComissionRecord>
@{
    ViewData["Title"] = "Comissões";
}

<br />
<br />
<br />
<h3>@ViewData["Title"]</h3>

<p><a asp-action="Create" class="btn btn-default">Incluir Comissão</a></p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>@Html.DisplayNameFor(model => model.Advisor)</th>
            <th>@Html.DisplayNameFor(model => model.Certified)</th>
            <th>@Html.DisplayNameFor(model => model.Yield)</th>
            <th>@Html.DisplayNameFor(model => model.Product)</th>
            <th>@Html.DisplayNameFor(model => model.Value)</th>
            <th>@Html.DisplayNameFor(model => model.LiquidValue)</th>
            <th>@Html.DisplayNameFor(model => model.PercentualAdvisor)</th>
            <th>@Html.DisplayNameFor(model => model.ProfitAdvisor)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => item.Date)</td>
                <td>@Html.DisplayFor(x => item.Advisor.Name)</td>
                <td>@Html.DisplayFor(x => item.Certified)</td>
                <td>@Html.DisplayFor(x => item.Yield)</td>
                <td>@Html.DisplayFor(x => item.Product.Name)</td>
                <td>@Html.DisplayFor(x => item.Value)</td>
                <td>@Html.DisplayFor(x => item.LiquidValue)</td>
                <td>@Html.DisplayFor(x => item.PercentualAdvisor)</td>
                <td>@Html.DisplayFor(x => item.ProfitAdvisor)</td>
            
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }

    </tbody>
</table>

